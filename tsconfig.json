{
  "extends": "@vue/tsconfig/tsconfig.dom.json",
  "include": ["env.d.ts", "src/**/*", "src/**/*.vue"],
  "compilerOptions": {
    "types": ["vite/client"],
    "baseUrl": ".",
    "paths": {
      "@/*": ["./src/*"]
    },
    "strict": true,
    "strictNullChecks": true,
    "lib": [
      "ES2020",
      "DOM",
      "DOM.Iterable"
    ],
  },
  "references": [
    {
      "path": "./tsconfig.config.json"
    }
  ]
}
